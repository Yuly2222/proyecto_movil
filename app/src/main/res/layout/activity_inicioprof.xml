<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo">

    <!-- Grid con 2 columnas -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Tarjeta 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/comunicados"
                android:layout_width="103dp"
                android:layout_height="92dp"
                android:src="@drawable/anuncio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comunicados"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Tarjeta 2  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/calendario"
                android:layout_width="103dp"
                android:layout_height="92dp"
                android:src="@drawable/calendario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendario"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
        <!-- Tarjeta 3  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/notas"
                android:layout_width="103dp"
                android:layout_height="92dp"
                android:src="@drawable/notas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Tarjeta 4  -->
        <LinearLayout
            android:id="@+id/clasesLayout"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/Clases"
                android:layout_width="103dp"
                android:layout_height="92dp"
                android:src="@drawable/icono" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clases"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Tarjeta 5  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/carnet"
                android:layout_width="103dp"
                android:layout_height="92dp"
                android:src="@drawable/carnet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carnet"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Tarjeta 6  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <ImageView
                android:id="@+id/datospersonales"
                android:layout_width="103dp"
                android:layout_height="92dp"
                android:src="@drawable/usuario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos personales"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Agrega mÃ¡s tarjetas con la misma estructura -->
    </GridLayout>
    <include layout="@layout/bottom_navigation_view"/>
</LinearLayout>
