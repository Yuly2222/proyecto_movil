<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemMateriaRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMateriaIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icono"
                android:src="@drawable/icono" />

            <!-- Contenedor para el título de la materia y el profesor -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <!-- Falta agregar aquí el TextView para el nombre de la materia -->
                <TextView
                    android:id="@+id/tvNombreMateria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Materia"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNombreProfesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Profesor"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Nota final a la derecha -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNotaFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final"
                    android:textColor="#6A6A6A"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Notas por semestre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem 1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem 2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem 3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>