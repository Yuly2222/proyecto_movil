<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <!-- Contenedor principal para todo el contenido dentro del ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1. Header degradado -->
        <FrameLayout
            android:id="@+id/headerPerfil"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_card">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Student Profile"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 2. CardView que contiene la información del perfil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"> <!-- Es mejor usar cardElevation para CardView -->

            <!-- LinearLayout para organizar el contenido DENTRO del CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivFotoPerfil"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_card"
                    android:contentDescription="Foto"
                    android:padding="12dp"
                    android:src="@drawable/carnet" />

                <!-- Contenedor para el nombre y el promedio -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/tvNombreEstudiante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Estudiante"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCarreraEstudiante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Curso" />
                </LinearLayout>

                <!-- Contenedor para el promedio general -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPromedioGeneral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promedio" />
                </LinearLayout>

            </LinearLayout> <!-- Fin del LinearLayout dentro del CardView -->
        </androidx.cardview.widget.CardView> <!-- Fin del CardView -->


        <!-- 3. Título de la sección de materias -->
        <TextView
            android:id="@+id/tvTituloMaterias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="4dp"
            android:text="Materias"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 4. Lista de materias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMaterias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp" />

    </LinearLayout> <!-- Fin del LinearLayout principal -->
</ScrollView>